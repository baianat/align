.align-dropzone
  position: relative
  border: 1px solid $white
  border-radius: 4px

  &-input
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    opacity: 0

  &-description
    background-color: alpha($gray, 30%)
    color: $white
    border-radius: 4px
    display: block
    width: calc(100% - 10px)
    text-align: center
    padding: 50px 20px
    margin: 5px