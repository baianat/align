.styler
  background-color: $white
  box-shadow: 0 20px 25px -20px alpha($black, 20%)
  display: flex

  &-menu
    &,
    ul
      display: flex
      margin: 0
      padding: 0
      width: auto
      list-style: none
      flex-wrap: wrap
      justify-content: center
      align-items: center
      user-select: none

  &-button
    background-color: $white
    fill: $black
    position: relative
    min-width: 30px
    height: 30px
    padding: 5px
    margin: 0
    border-radius: 15px
    border: 0
    outline: none
    .align-icon
      fill: inherit
    &:hover,
    &:focus,
    &.is-active
      fill: $magenta

  &-counter
    max-width: 40px
    margin: 0 5px
    border: 1px solid $dark
  &-separator
    content: '|'
    padding: 0 10px

  &-list
    -webkit-appearance: none
    padding: 5px 10px
    height: 30px
    border-radius: 15px
    background-color: $white
    font-size: 15px
    line-height: 15px

  &-input
    position: absolute
    width: 100%
    height: 100%
    opacity: 0
    top: 0
    right: 0
    bottom: 0
    left: 0

  &.is-visible
    display: flex


  &.is-dark
    background-color: $black
    color: $white
    .styler-button
      background-color: $black
      fill: $white
      &.is-active
        fill: $magenta
    .styler-select
      color: $white
    .align-icon
      color: $white !important
    .picker-guide svg
      color: $white
    [data-tooltip]
      &:before
        border-color: transparent transparent $white transparent
      &:after
        background-color: $white
        color: $black

  &.is-toolbar
    position: sticky
    z-index: 9999
    width: 100%
    height: 50px
    top: 0
    right: 0
    left: 0
    padding: 10px
    
  &.is-bubble
    padding: 10px
    top: 0
    left: 0
    position: absolute
    z-index: 40
    border-radius: 40px
    margin-top: -10px
    box-shadow: 0 0 25px alpha($black, 5%)
    transition: 0.2s
    transition-timing-function: cubic-bezier(0.39, 0.58, 0.57, 1)

  &.is-visible
    opacity: 1
    visibility: visible

  &.is-hidden
    visibility: hidden
    opacity: 0