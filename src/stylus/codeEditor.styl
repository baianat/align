.align-codeEditor
  position: relative
  width: 100%
  height: 400px
  background-color: $dark
  overflow: hidden
  resize: vertical
  &,
  *
    font-family: monospace !important
    font-size: 16px !important
    line-height: 1.5 !important

  &-wrapper
    position: relative
    width: 100%
    height: 100%

  &-textarea
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    border: 0
    margin: 0
    padding: 20px
    caret-color: $white
    white-space: pre
    color: transparent
    background-color: transparent
    resize: none
    outline: none

  .langSelector
    position: absolute
    top: 0
    right: 0
    color: $dark
    background: $white
    margin-right: 0

  &-pre
    color: $white
    position: absolute
    top: 20px
    left: 20px
    width: 100%
    border: 0
    margin: 0 !important
    padding: 0 !important
    background: none !important
    user-select: none
    pointer-events: none
    will-change: transform function